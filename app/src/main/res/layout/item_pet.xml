<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Imagen del animal -->
        <ImageView
            android:id="@+id/imageViewPet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/notfound" />

        <!-- Nombre del animal -->
        <TextView
            android:id="@+id/textViewPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageViewPet"
            android:text="@string/nombreAnimal"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Tipo de Animal -->
        <TextView
            android:id="@+id/textViewPetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetName"
            android:layout_alignStart="@id/textViewPetName"
            android:layout_marginTop="4dp"
            android:text="Tipo: Perro" />

        <!-- Raza -->
        <TextView
            android:id="@+id/textViewPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetType"
            android:layout_alignStart="@id/textViewPetType"
            android:layout_marginTop="4dp"
            android:text="Raza: Labrador" />

        <!-- Edad -->
        <TextView
            android:id="@+id/textViewPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetBreed"
            android:layout_alignStart="@id/textViewPetBreed"
            android:layout_marginTop="4dp"
            android:text="Edad: 3 aÃ±os" />

        <!-- Peso del animal -->
        <TextView
            android:id="@+id/textViewPetWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetAge"
            android:layout_alignStart="@id/textViewPetAge"
            android:layout_marginTop="4dp"
            android:text="Peso: 20kg" />

        <!-- Altura del animal -->
        <TextView
            android:id="@+id/textViewPetHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetWeight"
            android:layout_alignStart="@id/textViewPetWeight"
            android:layout_marginTop="4dp"
            android:text="Altura: 50cm" />

        <!-- Comida favorita -->
        <TextView
            android:id="@+id/textViewPetFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetHeight"
            android:layout_alignStart="@id/textViewPetHeight"
            android:layout_marginTop="4dp"
            android:text="Comida favorita: Croquetas" />

        <!-- Personalidad -->
        <TextView
            android:id="@+id/textViewPetPersonality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetFood"
            android:layout_alignStart="@id/textViewPetFood"
            android:layout_marginTop="4dp"
            android:text="Personalidad: Amigable" />

        <!-- Nombre de la protectora -->
        <TextView
            android:id="@+id/textViewPetProtectora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPetPersonality"
            android:layout_alignStart="@id/textViewPetPersonality"
            android:layout_marginTop="8dp"
            android:text="Protectora: Protectora Huellas Felices" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
